<odoo>
  <template id="portal_my_home_menu_profile" name="Portal layout : profile menu"
    inherit_id="portal.portal_my_home" priority="20">
    <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
      <a class="list-group-item list-group-item-action" t-att-href="'/my/profile'">
        <i class="fa fa-fw fa-user" /> My Profile </a>
    </xpath>
  </template>

  <template id="portal_my_profile" name="My Profile">
    <t t-call="portal.portal_layout">
      <t t-set="breadcrumbs" t-value="[('Home', '/my'), ('My Profile', '/my/profile')]" />

      <div class="card">
        <div class="card-header">
          <h4>Personal Information</h4>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3 text-center">
              <img class="img img-fluid rounded-circle"
                t-attf-src="/web/image/hr.employee/{{employee.id}}/avatar_1920"
                alt="Employee Avatar" />
              <h5 class="mt-2" t-field="employee.name" />
              <p class="text-muted" t-field="employee.job_title" />
            </div>
            <div class="col-md-9">
              <dl class="row">
                <dt class="col-sm-4">Work Email</dt>
                <dd class="col-sm-8" t-field="employee.work_email" />

                <dt class="col-sm-4">Work Phone</dt>
                <dd class="col-sm-8" t-field="employee.work_phone" />

                <dt class="col-sm-4">Department</dt>
                <dd class="col-sm-8" t-field="employee.department_id.name" />

                <hr class="my-3" />

                <dt class="col-sm-4">Personal Email</dt>
                <dd class="col-sm-8" t-field="employee.personal_email" />

                <dt class="col-sm-4">Citizen ID/CCCD</dt>
                <dd class="col-sm-8" t-field="employee.citizen_id" />

                <dt class="col-sm-4">Bank Account Number</dt>
                <dd class="col-sm-8" t-field="employee.bank_account_number" />
              </dl>
              <a href="#" class="btn btn-primary">Request a Change</a>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>

  <template id="portal_not_an_employee" name="Not an Employee">
    <t t-call="portal.portal_layout">
      <div class="alert alert-warning" role="alert">
        <h4>Access Restricted</h4>
        <p>This page is only accessible to company employees. Please contact HR if you believe this
          is an error.</p>
      </div>
    </t>
  </template>
</odoo>

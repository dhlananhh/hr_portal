<odoo>
  <data>
    <record id="hr_employee_change_request_form_view" model="ir.ui.view">
      <field name="name">hr.employee.change.request.form</field>
      <field name="model">hr.employee.change.request</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="action_submit" string="Submit" type="object" class="btn-primary"
              attrs="{'invisible': [('state', '!=', 'draft')]}" />
            <button name="action_approve" string="Approve" type="object" class="btn-primary"
              attrs="{'invisible': [('state', '!=', 'submitted')]}" groups="hr.group_hr_manager" />
            <button name="action_reject" string="Reject" type="object"
              attrs="{'invisible': [('state', '!=', 'submitted')]}" groups="hr.group_hr_manager" />
            <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved" />
          </header>
          <sheet>
            <group>
              <field name="employee_id" />
              <field name="citizen_id" />
              <field name="bank_account_number" />
              <field name="personal_email" />
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" />
            <field name="activity_ids" />
            <field name="message_ids" />
          </div>
        </form>
      </field>
    </record>

    <!-- Tree View -->
    <record id="hr_employee_change_request_tree_view" model="ir.ui.view">
      <field name="name">hr.employee.change.request.tree</field>
      <field name="model">hr.employee.change.request</field>
      <field name="arch" type="xml">
        <tree>
          <field name="employee_id" />
          <field name="create_date" />
          <field name="state" />
        </tree>
      </field>
    </record>

    <!-- Action -->
    <record id="action_hr_employee_change_request" model="ir.actions.act_window">
      <field name="name">Change Requests</field>
      <field name="res_model">hr.employee.change.request</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_hr_employee_change_request"
      name="Employee Change Requests"
      parent="hr.menu_hr_root"
      action="action_hr_employee_change_request"
      sequence="90" />
  </data>
</odoo>
